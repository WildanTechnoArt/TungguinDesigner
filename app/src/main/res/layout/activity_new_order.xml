<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.NewOrderActivity"
        android:keepScreenOn="true"
        android:background="#FFFFFF">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/data_view" android:visibility="gone">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" android:layout_margin="16dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_notifications_active_green_32dp"
                    tools:ignore="ContentDescription" android:id="@+id/notifyImage"/>

            <TextView
                    android:text="Ada order baru nih!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#FF39A637"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    tools:ignore="HardcodedText"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orderList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

            <TextView
                    android:text="Total : -"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_harga"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText"
                    android:gravity="end"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"/>

            <TextView
                    android:text="@string/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timer"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                <Button
                        android:text="Terima"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/accept"
                        android:layout_weight="1"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/accept_round_button"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="2dp"
                        tools:ignore="HardcodedText" style="@style/Widget.AppCompat.Button"/>

                <Button
                        android:text="Tolak"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/cancel"
                        android:layout_weight="1"
                        android:background="@drawable/cancel_round_button"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="2dp"
                        tools:ignore="HardcodedText"
                        style="@style/Widget.AppCompat.Button"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
            android:text="@string/txt_ex_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_expired_order"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:gravity="center" android:visibility="gone"/>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>