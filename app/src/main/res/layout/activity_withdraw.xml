<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.WithdrawActivity"
        android:background="#FFFFFF" android:id="@+id/withdraw_layout">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:elevation="6dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Withdraw Wallet"
                tools:targetApi="lollipop"
                android:theme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
        >

            <TextView
                    android:text="SALDO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_saldo"
                    android:textStyle="bold" android:textSize="15sp"
                    tools:ignore="HardcodedText"/>

            <TextView
                    android:text="Rp0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saldo_wallet"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" android:layout_marginTop="2dp"/>

            <View android:layout_width="match_parent"
                  android:id="@+id/line1"
                  android:layout_height="1dp"
                  android:background="@color/blue_button_disabled_state"
                  android:layout_marginTop="12dp"/>

            <TextView
                    android:text="REKENING TUJUAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_rekening"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/owner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleDrawable="@drawable/icon_selector" android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/owner_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Pemilik Rekening"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="#FF4D4D4D"
                        tools:ignore="HardcodedText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleDrawable="@drawable/icon_selector" android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Bank, Misal: BCA, BNI, Mandiri"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="#FF4D4D4D"
                        tools:ignore="HardcodedText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/norek_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleDrawable="@drawable/icon_selector" android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nomor_rekening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor Rekening"
                        android:textSize="15sp"
                        android:textColor="#FF4D4D4D"
                        android:inputType="phone"
                        tools:ignore="HardcodedText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/bank_branch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleDrawable="@drawable/icon_selector" android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bank_branch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Cabang Bank"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:textColor="#FF4D4D4D"
                        tools:ignore="HardcodedText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:text="JUMLAH PENARIKAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_amount"
                    android:layout_marginTop="12dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:id="@+id/get_amount"
                    android:hint="Rp0"
                    android:textSize="16sp"
                    tools:ignore="Autofill,HardcodedText"/>

            <Button
                    android:text="Cairkan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_request"
                    android:background="@drawable/ref_round_button"
                    android:textStyle="bold"
                    android:elevation="6dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="lollipop"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4B7B7B7B"
            android:id="@+id/shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>