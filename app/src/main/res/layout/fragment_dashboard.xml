<?xml version="1.0" encoding="utf-8"?>
 <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.DashboardFragment">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Status:"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/txt_status"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/status_designer"
                    app:layout_constraintEnd_toStartOf="@+id/center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/status_designer"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    tools:ignore="HardcodedText"/>


            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_designer"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Nonaktif"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/center"
                    android:layout_marginTop="12dp"
                    tools:ignore="HardcodedText" android:checked="false"/>

            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:id="@+id/center"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:visibility="invisible"/>

            <TextView
                    android:text="Saldo Wallet:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_status"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/center"
                    app:layout_constraintHorizontal_bias="1.0"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"/>

            <TextView
                    android:text="Rp 0,-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_saldo"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    app:layout_constraintStart_toEndOf="@+id/center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_status"/>

            <Button
                    android:text="Withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/withdraw"
                    android:elevation="6dp"
                    tools:targetApi="lollipop"
                    android:background="@drawable/reward_round_button"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/text1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="HardcodedText"/>

            <View android:layout_width="match_parent"
                  android:id="@+id/line1"
                  android:layout_height="1dp"
                  android:background="@color/blue_button_disabled_state"
                  app:layout_constraintTop_toBottomOf="@+id/withdraw"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginTop="12dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/statorder_layout"
                    app:layout_constraintTop_toBottomOf="@+id/line1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:padding="12dp">

                <TextView
                        android:text="@string/txt_total_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                <TextView
                        android:text="@string/txt_this_week_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/this_week_order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>

                <TextView
                        android:text="@string/txt_today_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/today_order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"/>

            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/dataChart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/card_announcement"
                    app:layout_constraintTop_toBottomOf="@+id/statorder_layout"
                    android:layout_marginTop="8dp">
            </com.github.mikephil.charting.charts.LineChart>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/card_announcement"
                    android:visibility="visible">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp">

                    <WebView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/announcement"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.SwipeRefreshLayout>
